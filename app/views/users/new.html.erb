<% @page_title = t(:new_user) %>

<div class="pageTitle">
  <%= t(:new_user) %>
</div>


  <%= form_for(:user, :url => {:action => 'create'}) do |f| %>
  <% if @user.errors.any? %>

  <div class="error">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <table class="table">
    <tr>
      <td class="caption"><label for="name"><%= f.label(:usertype) %>:</label></td>
      <td class="data"> <%= f.select(:usertype, options_for_select(["Administrator","Technical","Visitor"])) %> </td>
    </tr>

    <tr>
      <td class="caption"><label for="name"><%= f.label(:username) %>:</label></td>
      <td class="data"> <%= f.text_field(:username, :maxlength => 255, :size => 30)  %> </td>
    </tr>
    <tr>
      <td class="caption"><label for="name"><%= f.label(:name) %>:</label></td>
      <td class="data"> <%= f.text_field(:name, :maxlength => 255, :size => 30)  %> </td>
    </tr>
    <tr>
      <td class="caption"><label for="name"><%= f.label(:email) %>:</label></td>
      <td class="data"> <%= f.text_field(:email, :maxlength => 255, :size => 50, :placeholder=> 'example@szar.org')  %> </td>
    </tr>
    <tr>
      <td class="caption"><label for="name"><%= f.label(:plain_password, t(:password)) %>:</label></td>
      <td class="data"> <%= f.text_field(:plain_password, :maxlength => 255, :size => 30)  %> </td>
    </tr>
    <!--<tr>-->
      <!--<td class="caption"><label for="name"><%= f.label(:viewer) %>:</label></td>-->
      <!--<td class="data"> <%= f.check_box(:viewer)  %> </td>-->
    <!--</tr>-->
    <tr>
      <td class="caption"><label for="name"><%= f.label(:editor) %>:</label></td>
      <td class="data"> <%= f.check_box(:editor)  %> </td>
    </tr>
    <tr>
      <td class="buttons" colspan="2">
      <button type="submit" class="btn-success"><%="Save"  %></button>

        <%=link_to("Cancle",{:controller => 'users',:action => 'list'},:class => "btn btn-danger")%>
      </td>      
    </tr>
  </table>
  <script type="text/javascript">
    var input = $("#user_username");
    if (input != null && input != undefined) {
      input.focus();
    }
  </script>
  <% end %>


<% @page_title = t(:change_name) %>
<div style="text-align: left" >



  <%= form_for(:user, :url => {:action => 'update_name', :id => @user.id}) do |f| %>
  <% if @user.errors.any? %>

  <div class="error">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>

      <table class="table table-hover">
    <tr>
      <td class="caption"><label for="name"><%= f.label("New Name ") %></label></td>
      <td class="data"> <%= f.text_field(:name, :maxlength => 255, :size => 30)  %> </td>
    </tr>
    <tr>
      <td class="buttons" colspan="2">
        <button type="submit"class="btn btn-success"><%="Save" %></button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <!--<%=link_to("Cancle",{:action => "list"},:class => "btn btn-danger")%>-->
      </td>
    </tr>
  </table>
  <script type="text/javascript">
    var input = $("#user_name");
    if (input != null && input != undefined) {
      input.focus();
    }
  </script>
  <% end %>


</div>
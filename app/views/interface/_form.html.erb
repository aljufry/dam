<table class="table">
  <tr>
    <td class="caption"><label for="name"> Physical.Label: </label></td>
    <td class="data"> <%= f.text_field(:physical_label, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label("Name") %>:</label></td>
    <td class="data"> <%= f.text_field(:interface_name, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label("IP Address") %>:</label></td>
    <td class="data"> <%= f.text_field(:ip_add, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label("Net Mask") %>:</label></td>
    <td class="data"> <%= f.text_field(:net_mask, :maxlength => 100, :size => 30)  %> </td>
  </tr>

  <tr>
    <td class="caption"><label for="name"><%= f.label("Default.Getaway") %>:</label></td>
    <td class="data"> <%= f.text_field(:def_getaway, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label("preferred DNS") %>:</label></td>
    <td class="data"> <%= f.text_field(:pre_dns, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label("Alter DNS") %>:</label></td>
    <td class="data"> <%= f.text_field(:alter_dns, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label("HW Address") %>:</label></td>
    <td class="data"> <%= f.text_field(:hw_add, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label("Description") %>:</label></td>
    <td class="data"> <%= f.text_area(:remarks, :maxlength => 200, :cols => 50, :rows => 10)  %> </td>
  </tr>
  <tr>
    <td class="buttons" colspan="2">
      <%= link_to(t("Cancel"), {:controller=>'device',:action => 'list',:id=>@device.subnet.id}, :class => "btn btn-warning") %>
     <button type="submit" class="btn-success"><%="Save"  %></button>
      <% if @interface.id %>
      <% end %>
    </td>
  </tr>
</table>
<script type="text/javascript">
    var input = $("#server_server_name");
    if (input != null && input != undefined) {
        input.focus();
    }
</script>
<% @page_title = "Edit Interface" %>
<div style="text-align: center">
  <img border="0" src="/assets/Logo.JPG" alt="Data Center" width="200" height="100" >
</div>
<div style="text-align: center"><font color="#191970">
  <%= "Interfaces" %> <%= "of" %> <%= @device.device_type %> <%= "("%> <%=@device.device_name %> <%=")" %>
</font></div>


  <%= form_for(:interface, :url => {:action => 'update', :id => @interface.id}) do |f| %>
      <% if @interface.errors.any? %>

          <div class="error">
            <ul>
              <% @interface.errors.full_messages.each do |message| %>
                  <li>
                    <%= message %>
                  </li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <%= render(:partial => "form", :locals => {:f => f}) %>
  <% end %>

